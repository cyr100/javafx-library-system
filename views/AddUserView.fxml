<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.system.controller.AddUserController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <VBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Text fx:id="txtUserHeader" text="添加用户" fill="#2a5788">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Text>
        <GridPane hgap="10" vgap="10">
            <Label text="用户名:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="密码:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="姓名:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="fullNameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="邮箱:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="角色:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="roleChoice" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ADMIN"/>
                        <String fx:value="STAFF"/>
                        <String fx:value="USER"/>
                    </FXCollections>
                </items>
            </ChoiceBox>

              <Label text="状态:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <RadioButton fx:id="activeRadio" text="启用" selected="true"/>
                <RadioButton fx:id="inactiveRadio" text="禁用"/>
            </HBox>

            <Label text="头像:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <ImageView fx:id="imgAvatar" fitWidth="100" fitHeight="100" style="-fx-border-color: #cccccc; -fx-border-width: 1px;" />
                <Button fx:id="btnUploadAvatar" text="上传头像" onAction="#handleAvatarUpload" />
            </HBox>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="saveButton" text="保存" onAction="#handleSave" prefWidth="80"/>
            <Button fx:id="cancelButton" text="取消" onAction="#handleCancel" prefWidth="80"/>
        </HBox>
    </VBox>
</GridPane>