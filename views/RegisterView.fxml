<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.system.controller.RegisterController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <VBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Text text="用户注册" fill="#2a5788">
            <font>
                <Font name="Arial" size="24" />
            </font>
        </Text>
        <GridPane hgap="10" vgap="10">
            <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="密码:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="确认密码:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <PasswordField fx:id="txtConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="姓名:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtFullName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="邮箱:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="头像:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <ImageView fx:id="imgAvatar" fitWidth="100" fitHeight="100" style="-fx-border-color: #cccccc; -fx-border-width: 1px;" />
                <Button fx:id="btnUploadAvatar" text="上传头像" onAction="#handleAvatarUpload" />
            </HBox>
        </GridPane>
        <HBox alignment="CENTER" spacing="20">
            <Button text="注册" onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="返回" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
        </HBox>
        <Label fx:id="lblError" text="" textFill="RED" />
    </VBox>
</GridPane>